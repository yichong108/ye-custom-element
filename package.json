{
  "name": "ye-custom-element",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite-lib.config.js && npm run package",
    "preview": "vite preview",
    "package": "svelte-package --input ./src/library/dist && publint",
    "prepublishOnly": "npm run package",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "dev:storybook": "storybook dev -p 6008",
    "build:storybook": "storybook build",
    "pack": "npm pack"
  },
  "main": "./dist/index.es.js",
  "exports": {
    ".": {
      "types": "./dist/index.es.d.ts",
      "import": "./dist/index.es.js"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@storybook/addon-essentials": "^8.1.11",
    "@storybook/addon-interactions": "^8.1.11",
    "@storybook/addon-links": "^8.1.11",
    "@storybook/blocks": "^8.1.11",
    "@storybook/svelte": "^8.1.11",
    "@storybook/svelte-vite": "^8.1.11",
    "@storybook/test": "^8.1.11",
    "@storybook/addon-docs": "^8.2.5",
    "@storybook/addon-svelte-csf": "^4.1.4",
    "@sveltejs/package": "^2.3.2",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "prettier-plugin-svelte": "^3.2.5",
    "publint": "^0.2.8",
    "sass": "^1.77.6",
    "storybook": "^8.1.11",
    "svelte": "^4.2.18",
    "vite": "^5.3.1"
  },
  "dependencies": {
    "dayjs": "^1.11.12",
    "echarts": "^5.5.1",
    "lodash-es": "^4.17.21",
    "tippy.js": "^6.3.7"
  },
  "peerDependencies": {
    "echarts": ">=4.0.0"
  }
}
